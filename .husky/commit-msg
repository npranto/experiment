#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
COMMIT_MESSAGE=$(cat "$1")

echo $BRANCH_NAME
echo $COMMIT_MESSAGE

if [ -n "$COMMIT_MESSAGE" ] 
then
  echo "Oops! Please provide a valid commit message"
else
  echo "($BRANCH_NAME)"': '"$COMMIT_MESSAGE" > "$1"
fi






